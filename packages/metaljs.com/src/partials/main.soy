{namespace main}

/**
 * Topbar
 */
{template .topbar}
	<nav class="topbar">
		<a class="topbar-logo" href="/">
			<img class="topbar-logo-image" src="/images/logo_signature.png" alt="Metal.js Logo">
			<h1 class="topbar-logo-text">Metal.js</h1>
		</a>
		<ul class="topbar-menu">
			<li class="topbar-menu-item">
				<a class="topbar-menu-link" href="#">Intro</a>
			</li>
			<li class="topbar-menu-item">
				<a class="topbar-menu-link" href="#">Guides</a>
			</li>
			<li class="topbar-menu-item">
				<a class="topbar-menu-link" href="#">API</a>
			</li>
			<li class="topbar-menu-item">
				<a class="rounded-icon topbar-icon-github" target="_blank" href="https://github.com/metal/metal.js">
					<img src="/images/github_icon.svg" alt="GitHub Icon" width="16">
				</a>
			</li>
		</ul>
	</nav>
{/template}

/**
 * Footer
 */
{template .footer}
	<footer class="footer">
		<div class="container">
			<p class="footer-paragraph">
				<span class="footer-credits">
					<a class="rounded-icon footer-icon-liferay" target="_blank" href="http://liferay.com/">
						<img src="/images/liferay_logo.svg" alt="Liferay Icon" width="19">
					</a>
					Brought to you by <a class="footer-link" href="http://liferay.com/">Liferay, Inc</a>.
				</span>
				<span class="footer-license">
					<a class="footer-link" href="http://liferay.com/">BSD</a> License.
				</span>
			</p>
		</div>
	</footer>
{/template}
